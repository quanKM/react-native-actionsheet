{
  "name": "thanhtunguet-react-native-actionsheet",
  "version": "3.0.0-test-rc5",
  "description": "Cross platform ActionSheet. This component implements a custom ActionSheet  and provides the same way to drawing it on the defferent platforms(iOS and Android). Actually, In order to keep the best effect, it still uses the ActionSheetIOS on iOS.",
  "main": "./index.js",
  "scripts": {
    "lint": "standard lib/**/*.js",
    "test": "jest --no-cache",
    "watch": "NODE_ENV=development tsc -w",
    "build": "NODE_ENV=production tsc",
    "prebuild": "rm -rf dist/",
    "postbuild": "run-s cp-files",
    "cp-files": "cp package.json README.md dist/"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/dist"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beefe/react-native-actionsheet.git"
  },
  "keywords": [
    "actionsheet",
    "action sheet",
    "react-native",
    "react-native-action-sheet",
    "react-native-actionsheet",
    "custom-action-sheet"
  ],
  "author": "xiaoyann",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/beefe/react-native-actionsheet/issues"
  },
  "homepage": "https://github.com/beefe/react-native-actionsheet#readme",
  "peerDependencies": {
    "react": "^16.13.1",
    "react-native": "^0.62.2"
  },
  "devDependencies": {
    "@types/jest": "^26.0.0",
    "@types/react": "^16.9.38",
    "@types/react-native": "^0.62.13",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react-hooks": "^4.0.6",
    "jest": "^21.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "react-test-renderer": "15.4.0",
    "standard": "*",
    "typescript": "^3.9.5"
  },
  "standard": {
    "parser": "@typescript-eslint/parser"
  }
}
